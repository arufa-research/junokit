{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["esnext", "dom"],
		"outDir": "./build/scripts",
		"typeRoots": ["node_modules/@types"],
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowJs": true,
		"module": "commonjs",
		"resolveJsonModule": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": ["scripts"]
}