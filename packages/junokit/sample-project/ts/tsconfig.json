{
	"compilerOptions": {
		"baseUrl": "./",
        "paths" : {
            "*" : ["artifacts/typescript_schema/*"]	// used to simplify ts schema import
        },
		"target": "ES2020",
		"lib": ["esnext", "dom"],
		"outDir": "./build/scripts",
		"typeRoots": ["node_modules/@types"],
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowJs": true,
		"module": "commonjs",
		"resolveJsonModule": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"declaration": true
	},
	"exclude": ["**/node_modules", "**/webpack"],
	"include": ["scripts"]
}